<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="PieChartFragment">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGraph"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">



        <!-- and details of pie chart-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--Pie chart to display the data-->

            <org.eazegraph.lib.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="99dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:padding="6dp"



                />


            <!-- to display pie chart details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical">

                    <!--View to display the yellow color icon-->

                    <!--Text view to display R -->
                    <View
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:background="@color/happy" />

                    <ImageView
                        android:id="@+id/excitedImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Excited"
                        app:srcCompat="@mipmap/excited" />

                </LinearLayout>

                <!--Linear layout to display Python-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical">

                    <!--View to display the yellow color icon-->
                    <View
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />

                    <!--Text view to display R -->
                    <ImageView
                        android:id="@+id/happyImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Excited"
                        app:srcCompat="@mipmap/happy" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the green color icon-->
                    <View
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:background="@color/anxious" />

                    <!--Text view to display python text -->
                    <ImageView
                        android:id="@+id/anxiousImageView"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Anxious"
                        app:srcCompat="@mipmap/anxious" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <View
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@color/angry"/>


                    <ImageView
                        android:id="@+id/angryImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Angry"
                        app:srcCompat="@mipmap/angry" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">

                    <!--View to display the blue color icon-->
                    <View
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@color/neutral"/>


                    <ImageView
                        android:id="@+id/neutralImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Neutral"
                        app:srcCompat="@mipmap/neutral" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp">


                    <View
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:background="@color/sad" />

                    <ImageView
                        android:id="@+id/sadImageView"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="0dp"
                        android:tag="Sad"
                        app:srcCompat="@mipmap/sad" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="370dp"
        android:layout_below="@+id/cardViewGraph"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:text="MOOD Report"
                android:textSize="23sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:id="@+id/excited"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/excited" />

                <!--Text view to display the percentage -->
                <!-- of happy emotion. For now default set to 0-->
                <TextView
                    android:id="@+id/excitedtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:id="@+id/anxious"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/anxious" />


                <TextView
                    android:id="@+id/anxioustext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:id="@+id/angry"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/angry" />


                <TextView
                    android:id="@+id/angrytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">

                <!-- Image view to display the happy face -->
                <ImageView
                    android:id="@+id/neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/neutral" />

                <!--Text view to display the percentage -->
                <!-- of happy emotion. For now default set to 0-->
                <TextView
                    android:id="@+id/neutraltext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">

                <!-- Image view to display the happy face -->
                <ImageView
                    android:id="@+id/sad"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/sad" />

                <!--Text view to display the percentage -->
                <!-- of happy emotion. For now default set to 0-->
                <TextView
                    android:id="@+id/sadtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_two" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp">

                <!-- Image view to display the happy face -->
                <ImageView
                    android:id="@+id/happy"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="290dp"
                    android:src="@mipmap/happy" />

                <!--Text view to display the percentage -->
                <!-- of happy emotion. For now default set to 0-->
                <TextView
                    android:id="@+id/happytext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color_one"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/calenderbutton"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:text="@string/calender" /> <!-- Align to the bottom of the CardView -->
    />


</RelativeLayout>