<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:background="#00FFFFFF">

            <TextView
                android:id="@+id/entryCardTextView"
                android:layout_width="264dp"
                android:layout_height="91dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="50dp"
                android:ellipsize="end"
                android:fontFamily="@font/catamaran"
                android:lineSpacingExtra="-7sp"
                android:maxLines="3"
                android:text="The city of southern California, san diego is locally known as &quot;America's Finest City&quot;"
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleCardTextView" />

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="-7dp"
                android:fontFamily="@font/playfair_display"
                android:text="25"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.002"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/monthTextView"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/alatsi"
                android:text="Apr"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dayTextView" />

            <TextView
                android:id="@+id/yearTextView"
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/alatsi"
                android:text="2024"
                android:textAlignment="textStart"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view2"
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="36dp"
                android:background="@color/material_dynamic_neutral80"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/entryCardTextView" />

            <TextView
                android:id="@+id/titleCardTextView"
                android:layout_width="223dp"
                android:layout_height="30dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="9dp"
                android:ellipsize="end"
                android:fontFamily="@font/alatsi"
                android:maxLines="1"
                android:text="Hike in the Mountains"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_blue"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/entryCardTextView"
                app:layout_constraintEnd_toStartOf="@+id/moodCardImageView" />

            <ImageView
                android:id="@+id/moodCardImageView"
                android:layout_width="33dp"
                android:layout_height="28dp"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/entryCardTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@mipmap/smilingface" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>